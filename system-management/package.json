{
  "name": "meta-note",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main/desktop-main.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS= vite",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && cross-env NODE_OPTIONS= vite build",
    "deploy": "npm run typecheck && cross-env NODE_OPTIONS= vite build && electron-builder",
    "preview": "cross-env NODE_OPTIONS= vite preview",
    "start": "electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none NODE_OPTIONS= vite\" \"wait-on tcp:5173 && cross-env NODE_OPTIONS= electron . --disable-features=NODE_OPTIONS\"",
    "rebuild:sqlite3": "./node_modules/.bin/electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@react-three/drei": "9",
    "@react-three/fiber": "8",
    "@types/ioredis": "^5.0.0",
    "@types/kafkajs": "^1.9.0",
    "@types/three": "0.160.0",
    "better-sqlite3": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.8.2",
    "kafkajs": "^2.2.4",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "three": "0.160.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "electron": "33",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
