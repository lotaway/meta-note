{
  "name": "meta-note",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main/desktop-main.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS= vite",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && cross-env NODE_OPTIONS= vite build",
    "deploy": "npm run typecheck && cross-env NODE_OPTIONS= vite build && electron-builder",
    "preview": "cross-env NODE_OPTIONS= vite preview",
    "start": "electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none NODE_OPTIONS= vite\" \"wait-on tcp:5173 && cross-env NODE_OPTIONS= electron . --disable-features=NODE_OPTIONS\"",
    "rebuild:sqlite3": "./node_modules/.bin/electron-rebuild -f -w better-sqlite3",
    "build:native": "napi build --manifest-path ../system-support/Cargo.toml --release --output-dir ./native --dts index.d.ts"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@types/react-color": "^3.0.13",
    "@types/three": "0.160.0",
    "axios": "^1.13.5",
    "better-sqlite3": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3",
    "ioredis": "^5.8.2",
    "kafkajs": "^2.2.4",
    "lucide-react": "^0.300.0",
    "react": "^19.0.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "remark-gfm": "^4.0.1",
    "rxjs": "^7.8.2",
    "styled-components": "^6.2.0",
    "three": "0.160.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "youtube-dl-exec": "^3.0.30"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "electron": "33",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "native/*.node"
    ],
    "files": [
      "dist",
      "dist-electron",
      "native"
    ]
  }
}